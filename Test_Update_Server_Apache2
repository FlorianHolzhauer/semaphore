---
- name: Update Linux and Apache2
  hosts: my_servers
  become: true

  tasks:
    - name: Update all system packages
      apt:
        update_cache: yes
        upgrade: dist

    - name: Ensure Apache2 is installed
      apt:
        name: apache2
        state: present

    - name: Restart Apache2 to apply updates (if needed)
      service:
        name: apache2
        state: restarted
